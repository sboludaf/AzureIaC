{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ProjectName": {
            "type": "string",
            "metadata": {
                "description": "Name of project"
            }
        },
        "EnvironmentName": {
            "type": "string",
            "metadata": {
                "description": "Name of environment for deploy"
            }
        },
        "BingMapsSKU": {
            "type": "string",
            "allowedValues": [
                "public1",
                "public2",
                "public3",
                "public4",
                "public5",
                "public6",
                "internal1",
                "internal2",
                "internal3",
                "internal4",
                "internal5",
                "internal6"
            ],
            "metadata": {
                "description": "SKU tier of bing maps service"
            }
        }
    },
    "variables": {
        "BingMapsName": "[concat(parameters('ProjectName'), '-', parameters('EnvironmentName'), 'bing-maps')]"
    },
    "resources": [
        {
            "type": "Microsoft.BingMaps/mapApis",
            "apiVersion": "2016-08-18",
            "name": "[variables('BingMapsName')]",
            "location": "westus",
            "plan": {
                "publisher": "bingmaps",
                "product": "mapapis",
                "name": "[parameters('BingMapsSKU')]",
                "promotionCode": ""
            },
            "properties": {}
      }
    ],
    "outputs": {},
    "functions": []
}